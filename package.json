{
  "name": "todo-backend",
  "version": "1.0.0",
  "description": "Backend for Todo List Application using PostgreSQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "echo 'Build completed'",
    "dev": "nodemon server.js",
    "server": "nodemon server.js",
    "data:import": "node seeder.js -i",
    "data:destroy": "node seeder.js -d",
    "data:reset": "node seeder.js -d && node seeder.js -i",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "echo \"No tests specified\" && exit 0",
    "build": "echo \"Build completed - PostgreSQL database ready\"",
    "db:migrate": "node -e \"require('./config/db').syncDatabase().then(() => process.exit(0)).catch(err => {console.error(err); process.exit(1);})\"",
    "db:reset": "npm run data:destroy && npm run data:import"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.2",
    "multer-storage-cloudinary": "^4.0.0",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^9.1.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "supertest": "^6.3.4"
  },
  "keywords": [
    "todo",
    "api",
    "postgresql",
    "express",
    "node",
    "sequelize",
    "backend"
  ],
  "author": "Ahmed Omran",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
